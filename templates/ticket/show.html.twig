{% extends 'base.html.twig' %}

{% block title %}Ticket
{% endblock %}

{% block body %}
	<div class="carte">
		<h1>{{ ticket.titre }}</h1>

		<table class="unecarte">
			<tbody>
				<tr class="menu">

					<td>{{ ticket.description }}</td>
				</tr>
				<tr class="{{ ticket.priority.badgeClass}} menu">

				<td>{{ ticket.priority.value }}</td>
								</tr>
								<tr class="{{ ticket.status.badgeClass}} menu">
				
									<td>{{ ticket.status.value }}</td>
								</tr>
				<tr class="menu">

					<td>{{ ticket.createdAt ? ticket.createdAt|date('d-m-Y H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="btncheck">
		<button class="valider" aria-label="Éditer la tâche"><a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}"><img src="{{ asset('images/check.png')}}"></a></button>
		{{ include('ticket/_delete_form.html.twig') }}
		</div>
	</div>
	<a aria-label="Retour à la liste des tâches" href="{{ path('app_ticket_index') }}">Retour à la liste des tâches</a>

	


{% endblock %}
